# Lumos Framework Environment Variables
# Copy this file to .env and fill in your actual values

# ======================================
# Metadata Platform Configuration
# ======================================

# DataHub Configuration
DATAHUB_GMS_SERVER=http://localhost:8080
DATAHUB_TOKEN=

# Default Environment (DEV, STAGING, PROD)
DEFAULT_ENV=DEV

# ======================================
# Data Source Credentials
# ======================================

# MongoDB
MONGODB_URI=mongodb://localhost:27017
MONGODB_USERNAME=
MONGODB_PASSWORD=
MONGODB_AUTH_SOURCE=admin

# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# ======================================
# Framework Configuration
# ======================================

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log File Path
LOG_FILE=logs/lumos.log

# Configuration Directory
CONFIG_DIR=configs

# ======================================
# Optional: Additional Platforms
# ======================================

# Databricks (when implemented)
# DATABRICKS_HOST=
# DATABRICKS_TOKEN=
# DATABRICKS_CATALOG=

# Amundsen (when implemented)
# AMUNDSEN_HOST=
# AMUNDSEN_PORT=

# ======================================
# Security
# ======================================

# Enable/Disable TLS Verification
VERIFY_TLS=true

# API Timeouts (in seconds)
API_TIMEOUT=30
CONNECTION_TIMEOUT=10
